server {

    listen 127.0.0.1:443 ssl;
    server_name vbox.crisidev.org;
    include hhvm.conf;

    root /var/www/phpvirtualbox;
    index index.php index.html index.htm;

    ssl on;
    ssl_certificate /etc/nginx/ssl/crisidev.crt;
    ssl_certificate_key /etc/nginx/ssl/crisidev.key;
    ssl_session_cache shared:SSL:10m;
    add_header Strict-Transport-Security "max-age=16070400; includeSubdomains";

    access_log /var/log/nginx/vbox.crisidev.org-access.log;
    error_log /var/log/nginx/vbox.crisidev.org-error.log;

    client_max_body_size 1G;
    
    add_header X-Frame-Options "SAMEORIGIN";

    keepalive_requests    10;
    keepalive_timeout     60 60;

    client_body_buffer_size 128k;

    location / {
        try_files $uri $uri/ /index.html;
    }

    # Enables Caching
    location ~* \.(ico|css|js)$ {
    	expires 7d;
        add_header Pragma public;
        add_header Cache-Control "public, must-revalidate, proxy-revalidate";
    } 
}
