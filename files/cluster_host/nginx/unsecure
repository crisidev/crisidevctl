server {
  listen   80;
  server_name DOMAIN www.DOMAIN;
  return         301 https://$server_name$request_uri;
}

server {
  listen   80;
  server_name repo.DOMAIN;

  access_log /var/log/nginx/repo.DOMAIN-access.log;
  error_log /var/log/nginx/repo.DOMAIN-error.log;

  location / {
    root /CLUSTER-share/www/repo;
      autoindex on;
    }
}

server {
  listen   80;
  server_name apt.DOMAIN;

  access_log /var/log/nginx/apt.DOMAIN-access.log;
  error_log /var/log/nginx/apt.DOMAIN-error.log;

  location / {
    root /CLUSTER-share/www/debian-repo;
      autoindex on;
    }
}

server {
  listen   80;
  server_name plex.DOMAIN;
  return 301 https://$server_name$request_uri;
}
