server {
    listen 127.0.0.1:443 ssl;
    server_name crisidev.org www.crisidev.org;

    ssl on;
    ssl_certificate /etc/letsencrypt/live/crisidev.org/cert.pem;
    ssl_certificate_key /etc/letsencrypt/live/crisidev.org/privkey.pem;
    ssl_session_cache shared:SSL:10m;
    ssl_protocols SSLv3 TLSv1;
    ssl_ciphers  ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv3:+EXP;
    ssl_prefer_server_ciphers on;

    location / {
      root /crisidev-share/www/site;
    }
}

server {
    listen 127.0.0.1:443 ssl;
    server_name money.crisidev.org;

    ssl on;
    ssl_certificate /etc/letsencrypt/live/crisidev.org/cert.pem;
    ssl_certificate_key /etc/letsencrypt/live/crisidev.org/privkey.pem;
    ssl_session_cache shared:SSL:10m;
    ssl_protocols SSLv3 TLSv1;
    ssl_ciphers  ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv3:+EXP;
    ssl_prefer_server_ciphers on;

    location / {
      root /crisidev-share/www/money;
      auth_basic            "Alt!";
      auth_basic_user_file  /etc/nginx/ssl/money;
    }
}
