[Unit]
Description=Gitolite
After=docker.service
After=registrator.service
Requires=registrator.service

[Service]
Type=oneshot
ExecStartPre=-/usr/bin/docker kill gitolite.crisidev.orsidev.org
ExecStartPre=-/usr/bin/docker rm gitolite.crisidev.org
ExecStartPre=-/usr/bin/docker pull hub.crisidev.org:5000/crisidev/gitolite
ExecStart=/usr/bin/docker run --rm --name gitolite.crisidev.org -v /crisidev-share/git:/home/git \
  -e SSH_KEY="ssh-rsa  /Users/bigo/.ssh/id_rsa" \
  hub.crisidev.org:5000/crisidev/gitolite /init echo

[Install]
WantedBy=multi-user.target

[X-Fleet]
